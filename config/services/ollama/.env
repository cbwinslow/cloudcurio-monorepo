# Ollama Configuration

# Server configuration
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_MODELS=/root/.ollama/models
OLLAMA_DEBUG=false

# GPU configuration
OLLAMA_GPU=true
OLLAMA_GPU_LAYERS=0

# Model configuration
OLLAMA_KEEP_ALIVE=5m
OLLAMA_MAX_LOADED_MODELS=1

# Security configuration
OLLAMA_ORIGINS=http://localhost:3000,https://ui.osint.local,https://ollama.osint.local

# Logging configuration
OLLAMA_LOG_LEVEL=info
OLLAMA_LOG_FORMAT=json

# Performance configuration
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_QUEUE=512

# Model loading configuration
OLLAMA_LOAD_TIMEOUT=300
OLLAMA_PULL_TIMEOUT=600

# Cache configuration
OLLAMA_CACHE_TYPE=disk
OLLAMA_CACHE_SIZE=10GB

# API configuration
OLLAMA_API_TIMEOUT=300
OLLAMA_STREAM_TIMEOUT=60