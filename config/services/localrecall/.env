# LocalRecall Configuration

# Server configuration
LISTENING_ADDRESS=0.0.0.0:8082
DEBUG=false

# Database configuration
DATABASE_PATH=/data/localrecall.db
DATABASE_TYPE=sqlite

# Vector store configuration
VECTOR_STORE_TYPE=chromem
VECTOR_STORE_PATH=/data/vectors

# Model configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# API configuration
API_KEY=sk-localrecall1234567890
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=http://localhost:3000,https://ui.osint.local,https://localrecall.osint.local

# Security configuration
AUTH_ENABLED=true
JWT_SECRET=supersecretjwtkey
JWT_EXPIRATION=3600

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/data/logs/localrecall.log

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_SIZE=1000

# Document processing configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=10MB

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Web search configuration
WEB_SEARCH_ENABLED=true
WEB_SEARCH_CONCURRENT=5
WEB_SEARCH_TIMEOUT=30

# File processing configuration
SUPPORTED_FILE_TYPES=.txt,.md,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.csv,.json,.xml
FILE_PROCESSING_TIMEOUT=300