# BlackArch MCP Server Configuration

# Server configuration
BLACKARCH_MCP_HOST=0.0.0.0
BLACKARCH_MCP_PORT=3000
BLACKARCH_MCP_NAME=BlackArch MCP Server
BLACKARCH_MCP_VERSION=1.0.0

# Security configuration
BLACKARCH_MCP_API_KEY=sk-blackarchmcp1234567890
BLACKARCH_MCP_AUTH_ENABLED=true
BLACKARCH_MCP_JWT_SECRET=supersecretblackarchmcpkey
BLACKARCH_MCP_JWT_EXPIRATION=3600

# CORS configuration
BLACKARCH_MCP_CORS_ENABLED=true
BLACKARCH_MCP_CORS_ORIGINS=http://localhost:3000,https://ui.osint.local,https://blackarch-mcp.osint.local

# Logging configuration
BLACKARCH_MCP_LOG_LEVEL=INFO
BLACKARCH_MCP_LOG_FORMAT=json
BLACKARCH_MCP_LOG_FILE=/data/logs/blackarch-mcp.log

# Cache configuration
BLACKARCH_MCP_CACHE_ENABLED=true
BLACKARCH_MCP_CACHE_TTL=3600
BLACKARCH_MCP_CACHE_SIZE=1000

# Database configuration
BLACKARCH_MCP_DATABASE_TYPE=sqlite
BLACKARCH_MCP_DATABASE_PATH=/data/blackarch-mcp.db

# Tool configuration
BLACKARCH_MCP_TOOL_TIMEOUT=300
BLACKARCH_MCP_TOOL_CONCURRENT_LIMIT=10
BLACKARCH_MCP_TOOL_MAX_RETRIES=3

# Rate limiting configuration
BLACKARCH_MCP_RATE_LIMIT_ENABLED=true
BLACKARCH_MCP_RATE_LIMIT_REQUESTS=100
BLACKARCH_MCP_RATE_LIMIT_WINDOW=60

# Health check configuration
BLACKARCH_MCP_HEALTH_CHECK_PATH=/health
BLACKARCH_MCP_HEALTH_CHECK_INTERVAL=30

# External service configuration
BLACKARCH_MCP_EXTERNAL_SERVICES_ENABLED=true
BLACKARCH_MCP_EXTERNAL_SERVICES_TIMEOUT=300

# Plugin configuration
BLACKARCH_MCP_PLUGIN_PATH=/plugins
BLACKARCH_MCP_PLUGIN_AUTOLOAD=true
BLACKARCH_MCP_PLUGIN_WATCH=true

# Session configuration
BLACKARCH_MCP_SESSION_TTL=7200
BLACKARCH_MCP_SESSION_CLEANUP_INTERVAL=300

# File upload configuration
BLACKARCH_MCP_UPLOAD_PATH=/data/uploads
BLACKARCH_MCP_UPLOAD_MAX_SIZE=100MB
BLACKARCH_MCP_UPLOAD_ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.jpg,.jpeg,.png,.gif,.zip,.rar

# BlackArch integration configuration
BLACKARCH_MCP_BLACKARCH_ENABLED=true
BLACKARCH_MCP_BLACKARCH_TOOLS_PATH=/usr/bin
BLACKARCH_MCP_BLACKARCH_SCRIPTS_PATH=/opt/osint/scripts
BLACKARCH_MCP_BLACKARCH_DATA_PATH=/opt/osint/data

# Tool categories
BLACKARCH_MCP_TOOL_CATEGORIES=recon,scanner,exploitation,forensics,reverse,webapp,crypto,misc

# Default tools
BLACKARCH_MCP_DEFAULT_TOOLS=nmap,whois,dnsrecon,theharvester,sublist3r,amass,httprobe,httpx,nuclei,ffuf

# Update configuration
BLACKARCH_MCP_AUTO_UPDATE=true
BLACKARCH_MCP_UPDATE_INTERVAL=86400