# BlackArch OSINT Tools Configuration

# Server configuration
BLACKARCH_HOST=0.0.0.0
BLACKARCH_PORT=80

# Tool configuration
BLACKARCH_TOOLS_PATH=/usr/bin
BLACKARCH_SCRIPTS_PATH=/opt/osint/scripts
BLACKARCH_DATA_PATH=/opt/osint/data

# Database configuration
BLACKARCH_DATABASE_TYPE=sqlite
BLACKARCH_DATABASE_PATH=/opt/osint/data/blackarch.db

# Security configuration
BLACKARCH_SECRET_KEY=supersecretblackarchosintkey
BLACKARCH_API_KEY=sk-blackarch1234567890

# CORS configuration
BLACKARCH_CORS_ENABLED=true
BLACKARCH_CORS_ORIGINS=http://localhost:3000,https://ui.osint.local,https://blackarch.osint.local

# Logging configuration
BLACKARCH_LOG_LEVEL=INFO
BLACKARCH_LOG_FORMAT=json
BLACKARCH_LOG_FILE=/opt/osint/data/logs/blackarch.log

# Cache configuration
BLACKARCH_CACHE_ENABLED=true
BLACKARCH_CACHE_TTL=3600
BLACKARCH_CACHE_SIZE=1000

# Scan configuration
BLACKARCH_SCAN_TIMEOUT=300
BLACKARCH_SCAN_CONCURRENT=5
BLACKARCH_SCAN_MAX_TARGETS=100

# Reporting configuration
BLACKARCH_REPORT_FORMAT=pdf
BLACKARCH_REPORT_TEMPLATE=default
BLACKARCH_REPORT_PATH=/opt/osint/data/reports

# Notification configuration
BLACKARCH_NOTIFICATION_ENABLED=true
BLACKARCH_NOTIFICATION_EMAIL=admin@osint.local
BLACKARCH_NOTIFICATION_SLACK_WEBHOOK=${SLACK_WEBHOOK}

# Rate limiting configuration
BLACKARCH_RATE_LIMIT_ENABLED=true
BLACKARCH_RATE_LIMIT_REQUESTS=100
BLACKARCH_RATE_LIMIT_WINDOW=60

# Health check configuration
BLACKARCH_HEALTH_CHECK_PATH=/health
BLACKARCH_HEALTH_CHECK_INTERVAL=30

# External API configuration
BLACKARCH_EXTERNAL_APIS_ENABLED=true
BLACKARCH_EXTERNAL_APIS_TIMEOUT=300

# File storage configuration
BLACKARCH_STORAGE_PATH=/opt/osint/data/storage
BLACKARCH_STORAGE_MAX_SIZE=1GB

# Search configuration
BLACKARCH_SEARCH_ENABLED=true
BLACKARCH_SEARCH_INDEX_PATH=/opt/osint/data/search
BLACKARCH_SEARCH_MAX_RESULTS=100

# Tool categories
BLACKARCH_TOOL_CATEGORIES=recon,scanner,exploitation,forensics,reverse,webapp,crypto,misc

# Default tools
BLACKARCH_DEFAULT_TOOLS=nmap,whois,dnsrecon,theharvester,sublist3r,amass,httprobe,httpx,nuclei,ffuf

# Update configuration
BLACKARCH_AUTO_UPDATE=true
BLACKARCH_UPDATE_INTERVAL=86400