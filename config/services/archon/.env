# Archon Configuration

# Server configuration
ARCHON_HOST=0.0.0.0
ARCHON_PORT=80

# Database configuration
ARCHON_DATABASE_TYPE=sqlite
ARCHON_DATABASE_PATH=/data/archon.db

# Security configuration
ARCHON_SECRET_KEY=supersecretarchonkey
ARCHON_API_KEY=sk-archon1234567890

# CORS configuration
ARCHON_CORS_ENABLED=true
ARCHON_CORS_ORIGINS=http://localhost:3000,https://ui.osint.local,https://archon.osint.local

# Logging configuration
ARCHON_LOG_LEVEL=INFO
ARCHON_LOG_FORMAT=json
ARCHON_LOG_FILE=/data/logs/archon.log

# Cache configuration
ARCHON_CACHE_ENABLED=true
ARCHON_CACHE_TTL=3600
ARCHON_CACHE_SIZE=1000

# Resource configuration
ARCHON_RESOURCE_UPDATE_INTERVAL=3600
ARCHON_RESOURCE_MAX_AGE=86400

# Rate limiting configuration
ARCHON_RATE_LIMIT_ENABLED=true
ARCHON_RATE_LIMIT_REQUESTS=100
ARCHON_RATE_LIMIT_WINDOW=60

# Health check configuration
ARCHON_HEALTH_CHECK_PATH=/health
ARCHON_HEALTH_CHECK_INTERVAL=30

# External API configuration
ARCHON_EXTERNAL_APIS_ENABLED=true
ARCHON_EXTERNAL_APIS_TIMEOUT=300

# File storage configuration
ARCHON_STORAGE_PATH=/data/storage
ARCHON_STORAGE_MAX_SIZE=1GB

# Search configuration
ARCHON_SEARCH_ENABLED=true
ARCHON_SEARCH_INDEX_PATH=/data/search
ARCHON_SEARCH_MAX_RESULTS=100