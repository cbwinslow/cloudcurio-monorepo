# OpenWebUI Configuration

# Server configuration
WEBUI_HOST=0.0.0.0
WEBUI_PORT=8080
WEBUI_NAME=OSINT OpenWebUI

# Database configuration
DATABASE_URL=sqlite:///app/backend/data/webui.db
DATABASE_CONNECTION_POOL_SIZE=10

# Security configuration
WEBUI_SECRET_KEY=supersecretkey
WEBUI_AUTH=true
WEBUI_AUTH_TRUSTED_EMAIL_HEADER=null

# API configuration
OPENAI_API_KEY=sk-1234567890
OPENAI_API_BASE_URL=http://localai:8080

# Model configuration
MODEL_NAME=gpt-4
MODEL_TYPE=local
MODEL_TEMPERATURE=0.7
MODEL_CONTEXT_SIZE=4096

# Ollama configuration
OLLAMA_API_BASE_URL=http://ollama:11434
OLLAMA_MODEL_NAME=mistral

# CORS configuration
ENABLE_CORS=true
CORS_ALLOW_ORIGIN=http://localhost:3000,https://ui.osint.local,https://openwebui.osint.local

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache configuration
CACHE_TYPE=memory
CACHE_TTL=3600

# File upload configuration
UPLOAD_DIR=/app/backend/data/uploads
UPLOAD_MAX_SIZE=100MB
UPLOAD_ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.jpg,.jpeg,.png,.gif,.zip,.rar

# Rate limiting configuration
RATE_LIMIT=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email configuration
EMAIL_ENABLED=false
EMAIL_FROM=openwebui@osint.local
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=openwebui@osint.local
EMAIL_SMTP_PASSWORD=${EMAIL_SMTP_PASSWORD}

# OAuth configuration
OAUTH_ENABLED=false
OAUTH_PROVIDER=github
OAUTH_CLIENT_ID=${OAUTH_CLIENT_ID}
OAUTH_CLIENT_SECRET=${OAUTH_CLIENT_SECRET}
OAUTH_REDIRECT_URI=https://openwebui.osint.local/oauth/callback