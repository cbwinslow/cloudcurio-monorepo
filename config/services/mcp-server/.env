# MCP Server Configuration

# Server configuration
MCP_HOST=0.0.0.0
MCP_PORT=3004
MCP_NAME=OSINT MCP Server
MCP_VERSION=1.0.0

# Security configuration
MCP_API_KEY=sk-mcp1234567890
MCP_AUTH_ENABLED=true
MCP_JWT_SECRET=supersecretmcpkey
MCP_JWT_EXPIRATION=3600

# CORS configuration
MCP_CORS_ENABLED=true
MCP_CORS_ORIGINS=http://localhost:3000,https://ui.osint.local,https://mcp.osint.local

# Logging configuration
MCP_LOG_LEVEL=INFO
MCP_LOG_FORMAT=json
MCP_LOG_FILE=/var/log/mcp-server.log

# Cache configuration
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=3600
MCP_CACHE_SIZE=1000

# Database configuration
MCP_DATABASE_TYPE=sqlite
MCP_DATABASE_PATH=/data/mcp.db

# Tool configuration
MCP_TOOL_TIMEOUT=300
MCP_TOOL_CONCURRENT_LIMIT=10
MCP_TOOL_MAX_RETRIES=3

# Rate limiting configuration
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_WINDOW=60

# Health check configuration
MCP_HEALTH_CHECK_PATH=/health
MCP_HEALTH_CHECK_INTERVAL=30

# External service configuration
MCP_EXTERNAL_SERVICES_ENABLED=true
MCP_EXTERNAL_SERVICES_TIMEOUT=300

# Plugin configuration
MCP_PLUGIN_PATH=/plugins
MCP_PLUGIN_AUTOLOAD=true
MCP_PLUGIN_WATCH=true

# Session configuration
MCP_SESSION_TTL=7200
MCP_SESSION_CLEANUP_INTERVAL=300

# File upload configuration
MCP_UPLOAD_PATH=/data/uploads
MCP_UPLOAD_MAX_SIZE=100MB
MCP_UPLOAD_ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.jpg,.jpeg,.png,.gif,.zip,.rar