# Kali OSINT Tools Configuration

# Server configuration
KALI_HOST=0.0.0.0
KALI_PORT=80

# Tool configuration
KALI_TOOLS_PATH=/usr/bin
KALI_SCRIPTS_PATH=/opt/osint/scripts
KALI_DATA_PATH=/opt/osint/data

# Database configuration
KALI_DATABASE_TYPE=sqlite
KALI_DATABASE_PATH=/opt/osint/data/kali.db

# Security configuration
KALI_SECRET_KEY=supersecretkaliosintkey
KALI_API_KEY=sk-kali1234567890

# CORS configuration
KALI_CORS_ENABLED=true
KALI_CORS_ORIGINS=http://localhost:3000,https://ui.osint.local,https://kali.osint.local

# Logging configuration
KALI_LOG_LEVEL=INFO
KALI_LOG_FORMAT=json
KALI_LOG_FILE=/opt/osint/data/logs/kali.log

# Cache configuration
KALI_CACHE_ENABLED=true
KALI_CACHE_TTL=3600
KALI_CACHE_SIZE=1000

# Scan configuration
KALI_SCAN_TIMEOUT=300
KALI_SCAN_CONCURRENT=5
KALI_SCAN_MAX_TARGETS=100

# Reporting configuration
KALI_REPORT_FORMAT=pdf
KALI_REPORT_TEMPLATE=default
KALI_REPORT_PATH=/opt/osint/data/reports

# Notification configuration
KALI_NOTIFICATION_ENABLED=true
KALI_NOTIFICATION_EMAIL=admin@osint.local
KALI_NOTIFICATION_SLACK_WEBHOOK=${SLACK_WEBHOOK}

# Rate limiting configuration
KALI_RATE_LIMIT_ENABLED=true
KALI_RATE_LIMIT_REQUESTS=100
KALI_RATE_LIMIT_WINDOW=60

# Health check configuration
KALI_HEALTH_CHECK_PATH=/health
KALI_HEALTH_CHECK_INTERVAL=30

# External API configuration
KALI_EXTERNAL_APIS_ENABLED=true
KALI_EXTERNAL_APIS_TIMEOUT=300

# File storage configuration
KALI_STORAGE_PATH=/opt/osint/data/storage
KALI_STORAGE_MAX_SIZE=1GB

# Search configuration
KALI_SEARCH_ENABLED=true
KALI_SEARCH_INDEX_PATH=/opt/osint/data/search
KALI_SEARCH_MAX_RESULTS=100