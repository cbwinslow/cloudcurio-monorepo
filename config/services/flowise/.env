# Flowise Configuration

# Server configuration
PORT=3002
HOST=0.0.0.0

# Database configuration
DATABASE_PATH=/root/.flowise

# Security configuration
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=admin123
APIKEY_PATH=/root/.flowise/apikey.json

# CORS configuration
CORS_ORIGINS=http://localhost:3000,https://ui.osint.local,https://flowise.osint.local

# Logging configuration
LOG_LEVEL=info
LOG_PATH=/root/.flowise/logs

# Cache configuration
CACHE_PATH=/root/.flowise/cache
CACHE_TTL=3600

# File upload configuration
UPLOAD_PATH=/root/.flowise/uploads
UPLOAD_FILE_SIZE_LIMIT=50MB

# API configuration
API_TIMEOUT=300
API_CONCURRENT_LIMIT=10

# Model configuration
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# Vector store configuration
VECTOR_STORE_TYPE=memory
VECTOR_STORE_PATH=/root/.flowise/vectorstore

# Agent configuration
AGENT_MAX_ITERATIONS=10
AGENT_MAX_EXECUTION_TIME=300

# External API configuration
OPENAI_API_KEY=sk-1234567890
SERPAPI_API_KEY=${SERPAPI_API_KEY}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}

# Rate limiting configuration
RATE_LIMIT=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# Health check configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30